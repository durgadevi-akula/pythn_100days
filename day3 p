print("welcome to the pizza deliveries:")
size=input("what size pizza do you want? S,M,L")
pepporoni=input("Do u want pepporoni? Y or N")
extra_cheese=input("Do u want extra cheese? Yes or No")
final_price=0
if size=="S":
    final_price=15
elif size=="M":
    final_price=20
elif size=="L":
    final_price=25
else:
    print("Wrong size input")
if pepporoni=="Y":
    if size=="S":
        final_price+=2
    else:
        final_price+=3
    if extra_cheese=="Yes":
            final_price+=1
            print(f"final price of your pizza is: ${final_price}")


